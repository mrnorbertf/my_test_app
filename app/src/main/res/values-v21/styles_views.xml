<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Button.Flat.Primary">
		<item name="android:background">@drawable/button_green_with_ripple</item>
		<item name="android:textColor">@color/colorBlackTransparent</item>
		<item name="android:minWidth">88dp</item>
		<item name="android:textSize">@dimen/font_normal</item>
		<item name="android:paddingLeft">@dimen/double_default_size</item>
		<item name="android:paddingRight">@dimen/double_default_size</item>
		<item name="android:textAllCaps">true</item>
	</style>
	
	
	<style name="Button.Flat.Gray">
		<item name="android:background">@drawable/button_gray_with_ripple</item>
		<item name="android:textColor">@color/colorBlackTransparent</item>
		<item name="android:minWidth">88dp</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingTop">@dimen/default_size</item>
		<item name="android:paddingBottom">@dimen/default_size</item>
		<item name="android:textSize">@dimen/font_normal</item>
		<item name="android:textAllCaps">true</item>
	</style>
	
	<style name="Button.Flat.Solid">
		<item name="android:background">@drawable/button_gray_solid_with_ripple</item>
		<item name="android:textColor">@color/colorBlackTransparent</item>
		<item name="android:minWidth">88dp</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingTop">@dimen/default_size</item>
		<item name="android:paddingBottom">@dimen/default_size</item>
		<item name="android:textSize">@dimen/font_normal</item>
		<item name="android:textAllCaps">true</item>
	</style>

</resources>